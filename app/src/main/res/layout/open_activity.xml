<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include

        layout="@layout/app_bar" />


    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/g_bg_im"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dino Matching"
                android:textColor="#f0f"
                android:textSize="40sp"
                android:textStyle="italic" />


            <Button
                android:id="@+id/btnNormal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/mybutton"
                android:text="Easy"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnMedium"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/mybutton"
                android:text="Medium"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHard"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/mybutton"
                android:text="Hard"
                android:textColor="#fff"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <!--<ImageView-->
                    <!--android:id="@+id/img"-->

                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_gravity="left"-->
                    <!--android:src="@drawable/on" />-->

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imgseting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:src="@drawable/sett"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>


        <!--   <fragment

               android:presentId="@+presentId/fragNavDrewer"
               android:name="com.example.nayan.game3.fragment.NavigationDrawerFragment"
               android:layout_width="280dp"
               android:layout_height="match_parent"
               android:layout_gravity="start" />-->
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
